# ============================================
# Shared Parking System - Environment Variables
# ============================================
# 复制此文件为 .env 并填入实际的配置值
# cp .env.example .env

# ============================================
# 服务器配置
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_THREAD_POOL_SIZE=32

# ============================================
# 数据库配置
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=shared_parking
DB_USER=your_database_username
DB_PASSWORD=your_database_password
DB_POOL_SIZE=10

# ============================================
# JWT配置
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=3600
JWT_REFRESH_EXPIRES_IN=86400

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/auth-service.log

# ============================================
# 环境
# ============================================
ENVIRONMENT=development
# 可选值: development, staging, production

